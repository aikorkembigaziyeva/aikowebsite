@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container-fluid register-background">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="fw-bold mb-0">Hesap Oluştur</h2>
                    <p class="text-white-50 mb-0">Hemen kayıt ol ve aramıza katıl!</p>
                </div>
                <div class="card-body p-5">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Input.AdSoyad" class="form-control rounded-pill" placeholder="Ad Soyadınızı girin" />
                                    <label asp-for="Input.AdSoyad" class="text-muted">
                                        <i class="fas fa-user me-2"></i>Ad Soyadınız
                                    </label>
                               </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Input.Email" class="form-control rounded-pill" placeholder="E-posta adresinizi girin" />
                                    <label asp-for="Input.Email" class="text-muted">
                                        <i class="fas fa-envelope me-2"></i>E-posta Adresi
                                    </label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Input.Password" type="password" class="form-control rounded-pill" placeholder="Şifrenizi girin" />
                                    <label asp-for="Input.Password" class="text-muted">
                                        <i class="fas fa-lock me-2"></i>Şifre
                                    </label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control rounded-pill" placeholder="Şifrenizi tekrar girin" />
                                    <label asp-for="Input.ConfirmPassword" class="text-muted">
                                        <i class="fas fa-check-circle me-2"></i>Şifre Onayı
                                    </label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Input.Telefon" class="form-control rounded-pill" placeholder="Telefon numaranızı girin" />
                                    <label asp-for="Input.Telefon" class="text-muted">
                                        <i class="fas fa-phone me-2"></i>Telefon Numarası
                                    </label>
                                    <span asp-validation-for="Input.Telefon" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select rounded-pill">
                                        <option disabled selected>Kullanıcı Rolünüzü Seçin</option>
                                    </select>
                                    <label class="text-muted">
                                        <i class="fas fa-user-tag me-2"></i>Kullanıcı Rolü
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid mt-4">
                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg rounded-pill">
                                <i class="fas fa-user-plus me-2"></i>Kayıt Ol
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <p class="text-muted mb-0">Zaten bir hesabınız var mı? <a class="text-primary fw-bold" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        .register-background {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        }

        .card {
            border-radius: 20px;
            overflow: hidden;
        }

        .form-control, .form-select {
            transition: all 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                box-shadow: 0 0 0 0.2rem rgba(37, 117, 252, 0.25);
            }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}