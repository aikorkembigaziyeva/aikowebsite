@page
@model LoginModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container-fluid register-background">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="fw-bold mb-0">Hoş Geldiniz</h2>
                    <p class="text-white-50 mb-0">Hesabınıza giriş yapın</p>
                </div>
                <div class="card-body p-5">
                    <form id="loginForm" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="Input.Email" class="form-control rounded-pill" placeholder="E-posta adresinizi girin" />
                                <label asp-for="Input.Email" class="text-muted">
                                    <i class="fas fa-envelope me-2"></i>E-posta Adresi
                                </label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="Input.Password" type="password" class="form-control rounded-pill" placeholder="Şifrenizi girin" />
                                <label asp-for="Input.Password" class="text-muted">
                                    <i class="fas fa-lock me-2"></i>Şifre
                                </label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label">Beni Hatırla</label>
                        </div>

                        <div class="d-grid mt-4">
                            <button id="loginSubmit" type="submit" class="btn btn-primary btn-lg rounded-pill">
                                <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <a href="/ForgotPassword" class="text-muted small">Şifremi Unuttum</a>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <p class="text-muted mb-0">Hesabınız yok mu? <a href="/Register" class="text-primary fw-bold">Kayıt Ol</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        .register-background {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        }
        .card {
            border-radius: 20px;
            overflow: hidden;
        }
        .form-control {
            transition: all 0.3s ease;
        }
        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(37, 117, 252, 0.25);
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}