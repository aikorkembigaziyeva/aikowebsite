@model Asistan

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Asistan Oluştur</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-4 rounded">
                <!-- Ad Soyad -->
                <div class="form-floating py-3 col-12">
                    <input asp-for="AdSoyad" class="form-control border-0 shadow-sm" placeholder="Ad Soyad" />
                    <label asp-for="AdSoyad" class="ms-2">Ad Soyad</label>
                    <span asp-validation-for="AdSoyad" class="text-danger"></span>
                </div>
                <!-- Telefon -->
                <div class="form-floating py-3 col-12">
                    <input asp-for="Telefon" class="form-control border-0 shadow-sm" placeholder="Telefon" />
                    <label asp-for="Telefon" class="ms-2">Telefon</label>
                    <span asp-validation-for="Telefon" class="text-danger"></span>
                </div>
                <!-- Email -->
                <div class="form-floating py-3 col-12">
                    <input asp-for="Email" class="form-control border-0 shadow-sm" placeholder="Email" />
                    <label asp-for="Email" class="ms-2">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <!-- Adres -->
                <div class="form-floating py-3 col-12">
                    <input asp-for="Adres" class="form-control border-0 shadow-sm" placeholder="Adres" />
                    <label asp-for="Adres" class="ms-2">Adres</label>
                </div>
                <!-- Buttons -->
                <div class="row mt-4">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success rounded-pill form-control shadow-sm">
                            Oluştur
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Asistan" asp-action="Index" class="btn btn-secondary rounded-pill form-control shadow-sm">
                            Listeye Dön
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

<style>
    .form-floating label {
        font-size: 0.9rem;
        color: #6c757d;
        transition: all 0.3s ease-in-out;
    }

    .form-floating input:focus + label {
        font-size: 0.8rem;
        color: #495057;
    }

    button {
        transition: transform 0.3s ease, background-color 0.3s ease;
    }

        button:hover {
            transform: scale(1.05);
        }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .card-header {
        border-radius: 0.5rem 0.5rem 0 0;
    }

    .form-control {
        border-radius: 10px;
    }
</style>

