@model HocaMusaitlikVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    @(Model.HocaMusaitlik.Id != 0 ? "Müsaitlik Güncelle" : "Yeni Müsaitlik Oluştur")
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="HocaMusaitlik.Id" type="hidden" />
            <div class="border p-4 rounded">
                <!-- Hoca -->
                <div class="form-floating py-3 col-12">
                    <select asp-for="HocaMusaitlik.HocaID" asp-items="Model.HocaList" class="form-select border-0 shadow-sm">
                        <option value="" disabled selected>-- Hoca Seç --</option>
                    </select>
                    <label asp-for="HocaMusaitlik.HocaID" class="ms-2">Hoca</label>
                    <span asp-validation-for="HocaMusaitlik.HocaID" class="text-danger"></span>
                </div>
                <!-- Tarih -->
                <div class="form-floating py-3 col-12">
                    <input asp-for="HocaMusaitlik.Tarih" class="form-control border-0 shadow-sm" placeholder="Tarih" />
                    <label asp-for="HocaMusaitlik.Tarih" class="ms-2">Tarih</label>
                    <span asp-validation-for="HocaMusaitlik.Tarih" class="text-danger"></span>
                </div>
                <!-- Başlangıç Saati -->
                <div class="form-floating py-3 col-12">
                    <input asp-for="HocaMusaitlik.BaslangicSaati" class="form-control border-0 shadow-sm" placeholder="Başlangıç Saati" />
                    <label asp-for="HocaMusaitlik.BaslangicSaati" class="ms-2">Başlangıç Saati</label>
                    <span asp-validation-for="HocaMusaitlik.BaslangicSaati" class="text-danger"></span>
                </div>
                <!-- Bitiş Saati -->
                <div class="form-floating py-3 col-12">
                    <input asp-for="HocaMusaitlik.BitisSaati" class="form-control border-0 shadow-sm" placeholder="Bitiş Saati" />
                    <label asp-for="HocaMusaitlik.BitisSaati" class="ms-2">Bitiş Saati</label>
                    <span asp-validation-for="HocaMusaitlik.BitisSaati" class="text-danger"></span>
                </div>
                <!-- Buttons -->
                <div class="row mt-4">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success rounded-pill form-control shadow-sm">
                            @(Model.HocaMusaitlik.Id != 0 ? "Güncelle" : "Oluştur")
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="HocaMusaitlik" asp-action="Index" class="btn btn-secondary rounded-pill form-control shadow-sm">
                            Listeye Dön
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}

<style>
    .form-floating label {
        font-size: 0.9rem;
        color: #6c757d;
        transition: all 0.3s ease-in-out;
    }

    .form-floating input:focus + label,
    .form-floating select:focus + label {
        font-size: 0.8rem;
        color: #495057;
    }

    button {
        transition: transform 0.3s ease, background-color 0.3s ease;
    }

        button:hover {
            transform: scale(1.05);
        }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .card-header {
        border-radius: 0.5rem 0.5rem 0 0;
    }

    .form-control {
        border-radius: 10px;
    }
</style>