@model List<Bolum>

<div class="card shadow-lg border-0 mt-4">
    <div class="card-header" style="background-color: #87CEEB; color: #ffffff; padding: 1rem;">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="text-white">Bölüm Listesi</h2>
            <a asp-controller="Bolum" asp-action="Upsert" class="btn btn-light btn-sm">
                <i class="fa fa-plus"></i> Yeni Bölüm Ekle
            </a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-hover table-responsive-md">
            <thead class="bg-light">
                <tr class="text-center">
                    <th>Bölüm Adı</th>
                    <th>Yatak Sayısı</th>
                    <th>Sorumlu Hoca</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @if (Model != null && Model.Any())
                {
                    @foreach (var obj in Model.OrderBy(u => u.Ad))
                    {
                        <tr>
                            <td>@obj.Ad</td>
                            <td>@obj.YatakSayisi</td>
                            <td>@obj.HocaId</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-controller="Bolum" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-warning btn-sm">
                                        <i class="fa fa-edit"></i> Düzenle
                                    </a>
                                    <a asp-controller="Bolum" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger btn-sm delete-btn">
                                        <i class="fa fa-trash"></i> Sil
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-3">
                            Kayıtlı bir Bölum bulunmamaktadır.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>