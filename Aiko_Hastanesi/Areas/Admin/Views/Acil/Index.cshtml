@model List<Acil>

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header" style="background-color: #87CEEB; color: #ffffff; padding: 1rem;">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">Acil Listesi</h2>
                <a asp-controller="Acil" asp-action="Upsert" class="btn btn-light btn-sm">
                    <i class="fa fa-plus"></i> Yeni Acil Oluştur
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Açıklama</th>
                            <th>Konum</th>
                            <th>Acil Tipi</th>
                            <th>Bölüm</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Aciklama</td>
                                <td>@item.Konum</td>
                                <td>@item.AcilTipi</td>
                                <td>@item.Bolum.Ad</td>
                                <td>@item.OluşturulmaTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                            <i class="fa fa-edit"></i> Düzenle
                                        </a>
                                        <a asp-controller="Acil" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm delete-btn">
                                            <i class="fa fa-trash"></i> Sil
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>