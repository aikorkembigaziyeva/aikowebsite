@model AcilVM

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                @(Model.Acil.Id == 0 ? "Yeni Acil Oluştur" : "Acil Düzenle")
            </h6>
        </div>
        <div class="card-body">
            <form asp-action="Upsert" method="post">
                <input asp-for="Acil.Id" hidden />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Acil.Aciklama">Açıklama</label>
                            <input asp-for="Acil.Aciklama" class="form-control" />
                            <span asp-validation-for="Acil.Aciklama" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Acil.Konum">Konum</label>
                            <input asp-for="Acil.Konum" class="form-control" />
                            <span asp-validation-for="Acil.Konum" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Acil.AcilTipi">Acil Tipi</label>
                            <input asp-for="Acil.AcilTipi" class="form-control" />
                            <span asp-validation-for="Acil.AcilTipi" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Acil.BolumId">Bölüm</label>
                            <select asp-for="Acil.BolumId" asp-items="Model.BolumList" class="form-control">
                                <option value="">Bölüm Seçiniz</option>
                            </select>
                            <span asp-validation-for="Acil.BolumId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="@(Model.Acil.Id == 0 ? "Oluştur" : "Güncelle")" class="btn btn-primary mr-2" />
                    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
        });
    </script>
}